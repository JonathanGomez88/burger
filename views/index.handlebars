<h1>Burgers</h1>

<h2>Burger to be devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
     <div>{{this.burger_name}}</div><button id={{this.id}} class="change-devour" data-id={{this.id}}>Devour It</button>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
    <div>{{this.burger_name}}</div>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form action="/api/burgers" method="POST" class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>



</form>

  <button id="submit-button">Add Burger</button>
